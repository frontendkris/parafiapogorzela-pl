---
import { PortableText } from "astro-portabletext";
import { siteSettings } from "../utils/store";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero/Page.astro";
import InfoContainer from "../components/InfoContainer.astro";

const page = {
  title: "Intencje Mszalne",
  description: "",
  // body: siteSettings?.parishAnnouncements,
};
---

<Layout
  title={page.title}
  description={page.description}
>
  <Hero />
  <section class="page py-10">
    <div class="container mx-auto">
      <div class="hero-heading">
        <h1 class="heading h0 text-center mt-10 mb-20">{page.title}</h1>
      </div>
      <InfoContainer>
        <PortableText value={siteSettings?.massIntentions} />
      </InfoContainer>
    </div>
  </section>
</Layout>
