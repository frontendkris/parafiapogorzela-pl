---
import {PortableText} from "astro-portabletext";
import H1 from "./sanity/H1.astro";
import H2 from "./sanity/H2.astro";
import H3 from "./sanity/H3.astro";
import H4 from "./sanity/H4.astro";
import Paragraph from "./sanity/Paragraph.astro";
import ListBullet from "./sanity/ListBullet.astro";
import BlockQuote from "./sanity/BlockQuote.astro";
import TextCenter from "./sanity/TextCenter.astro";
import SanityImage from "./sanity/SanityImage.astro";
import {Debug} from "astro:components";

const components = {
  block: {
    h1: H1,
    h2: H2,
    h3: H3,
    h4: H4,
    normal: Paragraph,
    blockquote: BlockQuote,
  },
  list: {
    bullet: ListBullet,
  },
  mark: {
    center: TextCenter,
  },
  type: {
    image: SanityImage,
  },
};
---

<PortableText value={Astro.props.value} components={components} />

<style is:global>
  article {
    @apply text-base lg:!text-lg;
    @apply !leading-relaxed;
  }
  article .heading:not(.h0) {
    @apply mt-8 mb-6;
  }
  article .narrow > *:first-child {
    @apply !mt-0;
  }
</style>
