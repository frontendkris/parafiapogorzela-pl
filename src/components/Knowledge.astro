---
  const caveImageSrc = "/cave.png";
  import { getPosts, type Post } from "../utils/sanity";
  import Caret from "./Partials/Caret.astro"

  const posts = await getPosts();
---

<section class="knowledge">
  <div class="container mx-auto pt-20 lg:pt-28">
    <div class="knowledge-grid">
      <div class="relative block lg:col-start-0 lg:col-span-5 h-full">
        <div class="static aspect-square w-full"></div>
        <img loading="lazy" src={caveImageSrc} class="absolute left-0 right-0 lg:right-auto m-auto lg:m-0 -bottom-2 z-20">
        <img loading="lazy" src={caveImageSrc} class="absolute left-0 right-0 lg:right-auto m-auto lg:m-0 -bottom-2 blur-3xl opacity-20 z-10">
      </div>
      <div class="text-column">
        <h2 class="heading h0 lg:-ml-28 mb-5 lg:mb-12 text-left">Wiara i historia</h2>
        <ul class="link-list">
          {posts?.map((post: Post) => (
            <li class="link-list-item">
              <a href={`/post/${post.slug.current}`}>
                {post.title}
                <Caret />
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  .knowledge {
    @apply text-xl overflow-visible;
    background: linear-gradient(180deg, #2B2B35 0%, #293459 100%);
  }
  .knowledge-grid {
    @apply flex flex-col-reverse lg:grid lg:grid-cols-12;
  }
  .text-column {
    @apply lg:col-start-7 lg:col-span-6 pb-5 lg:pb-28 text-white text-left;
  }
</style>