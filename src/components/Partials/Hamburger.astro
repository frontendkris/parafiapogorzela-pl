---
import type { Color } from "./Logo.astro"

const { type: Color } = Astro.props;
const color = Astro.props.type === "light" ? "white" : "black";
---

<div role="button" class="drawer-toggle">
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke={color} class="w-6 h-6">
    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
  </svg>
</div>
