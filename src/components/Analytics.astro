<script>
  var r = new XMLHttpRequest();
  r.addEventListener("load", function () {
    const visitCount = JSON.parse(this.responseText).count;
    document.querySelector("#visitCounter")!.innerHTML =
      `Liczba odwiedzin: ${parseInt(visitCount.toLocaleString('pl-PL'))}`;
  });
  r.open(
    "GET",
    "https://parafiapogorzela.goatcounter.com/counter/" +
      encodeURIComponent(location.pathname) +
      ".json"
  );
  r.send();
</script>
